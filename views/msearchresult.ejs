<%- include("partials/header1"); -%>
<%var loggedin=false;%>
<%if(typeof user.email!="undefined"){loggedin = true;}%>
<div id="headerlogin">
  <%if(loggedin!=true){%>
    <a href="/login" id="login">Login</a>
    <a href="/signup" id="signup">Sign Up</a>
  <%}%>
  <%if(loggedin==true){%>
    <div id="headeruser">
      <div><p id="signup" onclick="userbutton()"><img src="<%=user.profile_image%>" alt="not found" height="25" width="20" loading="lazy"><%=user.username+" "%><i class="arrow down"></i></p></div>
      <div><p id="userinfo" onclick="myaccount()">My Account</p></div>
      <div><p id="signout" onclick="signout()">Sign Out</p></div>
    </div>
  <%}%>
</div>
<%- include("partials/extra1"); -%>
<main class="mains">
<div class="leftmain">
<h5 class="firsttag">Search results</h5>
<h5 class="firsttag" style="background-color: #2e51a2; color: white;">Movie Results</h5>
<% let animeobjects=movieobject%>
<% let l=animeobjects.length%>
<%if(l==0){ l=0;%>
  <div style="border-bottom: 1px solid #bebebe;">
      <h2 style="text-align: center;">No movie results found</h2>
  </div>
<%}%>
<%if(l>10) l=10;%>
<% for(let i=0;i<l;i++){ %>
<div class="searchitems">
    <div class="animesearchimg">
        <%if(animeobjects[i].poster_path!=null){%>
        <img src="https://image.tmdb.org/t/p/original<%=animeobjects[i].poster_path%>" height="200px" width="160px"><%}%>
        <%if(animeobjects[i].poster_path==null){%>
          <img src="https://www.planetf1.com/content/themes/planet/img/no_image.jpg" height="200px" width="160px"><%}%>
    </div>
    <div class="animesearchdata">
        <div class="animetitle">
            <a href="/binger/movie/<%=animeobjects[i].id%>"><%=animeobjects[i].title%></a>
        </div>
        <div class="animestory">
            <p style="margin-top:10px;"><%=animeobjects[i].overview.slice(0,250)%> <a href="/otaku/anime/<%=animeobjects[i].mal_id%>">Read more</a></p>
        </div>
        <div class="animerating">
            <p style="margin-bottom:0px; margin-top:10px;">Vote Average: <%=animeobjects[i].vote_average%> (<%=animeobjects[i].vote_count%> votes)</p>
            <p style="margin-bottom:0px;"><%=animeobjects[i].release_date%></p>
        </div>
    </div>
</div>
<% } %>
<h5 class="firsttag" style="background-color: #2e51a2; color: white;">Series Results</h5>
<% animeobjects=seriesobject; l=animeobjects.length;%>
<%if(l==0){ l=0;%>
  <div style="border-bottom: 1px solid #bebebe;">
      <h2 style="text-align: center;">No series results found</h2>
  </div>
<%}%>
<%if(l>10) l=10;%>
<% for(let i=0;i<l;i++){ %>
<div class="searchitems">
    <div class="animesearchimg">
        <%if(animeobjects[i].poster_path!=null){%>
        <img src="https://image.tmdb.org/t/p/original<%=animeobjects[i].poster_path%>" height="200px" width="160px"><%}%>
        <%if(animeobjects[i].poster_path==null){%>
          <img src="https://www.planetf1.com/content/themes/planet/img/no_image.jpg" height="200px" width="160px"><%}%>
    </div>
    <div class="animesearchdata">
        <div class="animetitle">
            <a href="/binger/series/<%=animeobjects[i].id%>"><%=animeobjects[i].original_name%></a>
        </div>
        <div class="animestory">
            <p style="margin-top:10px;"><%=animeobjects[i].overview.slice(0,250)%> <a href="/otaku/anime/<%=animeobjects[i].mal_id%>">Read more</a></p>
        </div>
        <div class="animerating">
            <p style="margin-bottom:0px; margin-top:10px;">Vote Average: <%=animeobjects[i].vote_average%> (<%=animeobjects[i].vote_count%> votes)</p>
            <p style="margin-bottom:0px;"><%=animeobjects[i].release_date%></p>
        </div>
    </div>
</div>
<% } %>
</div>
<div class="rightmain">
    <h5 class="topairing">Trending Movies Worldwide</h5>
    <div class="airinganime" style="background-color: rgb(0,0,0,0.3) ; ">
    <% for(let i=0;i<5;i++) {%>
        <div style="margin:5px 3px 0px 3px; padding: 0px ;">
            <div class="airing">
                <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="https://image.tmdb.org/t/p/w500<%=jsontopmoviesw[i].poster_path%>" alt=""></div>
            </div>
        </div>
        <%}%>
        <h5 class="topairing">Trending Series Worldwide</h5>
        <div class="airinganime" style="background-color: rgb(0,0,0,0.0) ;">
        <%for(i=0;i<5;i++){%>
        <div>
            <div class="airing">
                <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="https://image.tmdb.org/t/p/w500<%=jsontopseriesw[i].poster_path%>" alt=""></div>
            </div>
        </div>
      <%}%>
    </div>
</div>
</div>


</main>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/scripts/animehome.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</html>
