<%- include("partials/header1"); -%>
<%var loggedin=false;%>
<%if(typeof user.email!="undefined"){loggedin = true;}%>
<div id="headerlogin">
  <%if(loggedin!=true){%>
    <a href="/login" id="login">Login</a>
    <a href="/signup" id="signup">Sign Up</a>
  <%}%>
  <%if(loggedin==true){%>
    <div id="headeruser">
      <div><p id="signup" onclick="userbutton()"><img src="<%=user.profile_image%>" alt="not found" height="25" width="20" loading="lazy"><%=user.username+" "%><i class="arrow down"></i></p></div>
      <div><p id="userinfo" onclick="myaccount()">My Account</p></div>
      <div><p id="signout" onclick="signout()">Sign Out</p></div>
    </div>
  <%}%>
</div>
<%- include("partials/extra1"); -%>
<main class="mains">
<div class="leftmain">
<h5 class="firsttag">News</h5>
<%if(postdetails.length>=1){%>
<%for(var i=postdetails.length-1;i>=0;i--){%>
  <div class="newsitems" style="margin-bottom: 10px;">
    <div class="articleimg">
      <img src="<%=postdetails[i].postimg%>" height="200px" width="200px">
    </div>
    <div class="titlepost">
      <div class="articletitle">
          <a href="/binger/news/<%=postdetails[i].postid%>"><%=postdetails[i].posttitle%></a>
      </div>
      <div class="articlecontent">
        <%-postdetails[i].postdata.slice(0,350)%>
      </div>
      <div>
        <%=postdetails[i].postdate+" IST"%>
      </div>
    </div>
  </div>
  <%}%>
  <%}%>
  <br>
  <%if(typeof suggestions_data != 'undefined' && suggestions_data.length != 0){ %>
    <div style="border-top:2px #bebebe solid;border-bottom:2px #bebebe solid;">
      <h5 style="display:inline-block;">Suggestions</h5>
      <a style="float:right;text-decoration:none;margin-right:10px;" href="/binger/suggestions" >view more</a>
    </div>
    <div class="suggestion_body" style="display:grid;grid-template-columns: 1fr 1fr 1fr 1fr;">  
      <% suggestions_data.forEach((item)=>{ %>
          <div class="card" style="margin:10px;">
            <div id="movie_card_center">
              <img class="card-img-top center" style="height:300px;width:200px;" src="https://image.tmdb.org/t/p/w500/<%= item.poster_path%>" alt="">
            </div>  
            <div class="card-body" id="movie_card_center">
              <button class="btn btn-primary center"> <%= item.original_title %></button>
            </div>
          </div>
        <% }) %>
    </div>

  <% } %>
</div>
<div class="rightmain">
    <h5 class="topairing">Trending Movies Worldwide</h5>
    <div class="airinganime" style="background-color: rgb(0,0,0,0.3) ; ">
        <% jsontopmoviesw.forEach(async (item,i)=>{%>
          <div class="" style="margin:5px 3px 0px 3px; padding: 0px ;">
            <div class="airing">
              <%if(typeof jsontopmoviesw=='undefined'){%>
                <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:200px; width: 320px" src="https://www.planetf1.com/content/themes/planet/img/no_image.jpg" alt=""></div><%}%>
              <%if(typeof jsontopmoviesw!='undefined'){%>
              <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="https://image.tmdb.org/t/p/w500<%=item.poster_path%>" alt=""></div><%}%>
              
            </div>
          </div>
        <%})%>
        <br>
        <h5 class="topairing">Trending Series Worldwide</h5>
        <div class="airinganime" style="background-color: rgb(0,0,0,0.0) ;">
        <%for(i=0;i<5;i++){%>
          <div>
            <div class="airing">
              <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="https://image.tmdb.org/t/p/w500<%=jsontopseriesw[i].poster_path%>" alt=""></div>
            </div>
          </div>
      <%}%>
    </div>
</div>
</div>


</main>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script src="scripts/animehome.js"></script>
</html>
