<%- include("partials/header"); -%>
<%var loggedin=false;%>
<%if(typeof user.email!="undefined"){loggedin = true;}%>
<div id="headerlogin">
  <%if(loggedin!=true){%>
    <a href="/login" id="login">Login</a>
    <a href="/signup" id="signup">Sign Up</a>
  <%}%>
  <%if(loggedin==true){%>
    <div id="headeruser">
      <div><p id="signup" onclick="userbutton()"><img src="<%=user.profile_image%>" alt="not found" height="25" width="20" loading="lazy"><%=user.username+" "%><i class="arrow down"></i></p></div>
      <div><p id="userinfo" onclick="myaccount()">My Account</p></div>
      <div><p id="signout" onclick="signout()">Sign Out</p></div>
    </div>
  <%}%>
</div>
<%- include("partials/extra"); -%>
<main class="mains">
<div class="leftmain">
<h5 class="firsttag">News</h5>
<%if(postdetails.length>=1){%>
<%for(var i=postdetails.length-1;i>=0;i--){%>
<div class="newsitems" style="margin-bottom: 10px;">
  <div class="articleimg">
    <img src="<%=postdetails[i].postimg%>" height="200px" width="200px" loading="lazy">
  </div>
  <div class="titlepost">
    <div class="articletitle">
        <a href="/otaku/news/<%=postdetails[i].postid%>"><%=postdetails[i].posttitle%></a>
    </div>
    <div class="articlecontent">
      <%-postdetails[i].postdata.slice(0,350)%>
    </div>
    <div>
      <%=postdetails[i].postdate+" IST"%>
    </div>
  </div>
</div>
<%}%>
<%}%>
</div>
<div class="rightmain">
    <h5 class="topairing">Top Airing Anime</h5>
    <div class="airinganime" style="background-color: rgb(0,0,0,0.3) ;">
    <% let airanime = airanimeobject %>
    <% for(let i=0;i<5;i++) {%>
        <div style="margin:5px 3px 0px 3px; padding: 0px ;">
          <div class="airing">
            <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="<%=airanime[i].images.jpg.image_url%>" alt="" loading="lazy"></div>
          </div>
        </div>
        <%}%>
        <h5 class="topairing">Most Popular Anime</h5>
        <%let popanime=topanimeobject%>
        <div class="airinganime" style="background-color: rgb(0,0,0,0.0) ;">
        <%for(i=0;i<5;i++){%>
          <div>
            <div class="airing">
              <div class="imageair"><img style="margin: 5px 3px 0px 3px; height:260px; width: 260px" src="<%=popanime[i].images.jpg.image_url%>" alt="" loading="lazy"></div>
          </div>
          </div>
      <%}%>
    </div>
</div>
</div>


</main>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script src="/scripts/animehome.js"></script>
<script>
  $(".posttitlea").each(function(){
  $(this).removeAttr("href");
  $(this).css("text-decoration","none");
});
</script>
</html>
